<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPF_LoginForm.Views"
    xmlns:windowChrome="clr-namespace:System.Windows.Shell;assembly=PresentationFramework" Title="MainWindowView" Height="700" Width="1300" WindowStartupLocation="CenterScreen" WindowStyle="None" Background="Transparent" AllowsTransparency="True" ResizeMode="CanResize">
    <Grid>
        <!-- Main window border and content -->
        <Border CornerRadius="10" BorderThickness="1" Background="Transparent">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="{DynamicResource WindowBorderPrimaryColor}" Offset="0" />
                    <GradientStop Color="{DynamicResource WindowBorderAccentColor}" Offset="0" />
                    <GradientStop Color="{DynamicResource WindowBorderSecondaryColor}" Offset="0" />
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Grid>
                <Grid.ColumnDefinitions>
                    <!-- Sidebar -->
                    <ColumnDefinition Width="250" />
                    <!-- Main Section -->
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <!-- Sidebar -->
                <Border CornerRadius="10,0,0,10" Grid.Column="0">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="1,0.75" EndPoint="0,0">
                            <GradientStop Color="{DynamicResource SecondaryBackgroundDarkColor}" Offset="0" />
                            <GradientStop Color="{DynamicResource SecondaryBackgroundColor}" Offset="1" />
                        </LinearGradientBrush>
                    </Border.Background>
                    <Grid>
                        <StackPanel x:Name="SidebarPanel" Background="Transparent" HorizontalAlignment="Center">
                            <!-- Title -->
                            <StackPanel Orientation="Horizontal" Height="100" Margin="15,15,15,15" Background="Transparent">
                                <Viewbox Stretch="Uniform" MaxWidth="180" MaxHeight="120" VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <Image x:Name="Logo" Source="../Images/logo yellow arrow.png" />
                                </Viewbox>
                            </StackPanel>
                            <!-- Menu Buttons -->
                            <RadioButton x:Name="btnHome" Style="{DynamicResource menuButton}" Tag="{DynamicResource AccentPurpleLight}">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                    <Path Style="{DynamicResource menuButtonIcon}" Data="{DynamicResource Home}" />
                                    <TextBlock Text="Home" Style="{DynamicResource menuButtonText}" />
                                </StackPanel>
                            </RadioButton>
                            <RadioButton x:Name="btnConfig" Style="{DynamicResource menuButton}" Tag="{DynamicResource AccentBlue}">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                    <Path Style="{DynamicResource menuButtonIcon}" Data="{DynamicResource Config}" />
                                    <TextBlock Text="Config" Style="{DynamicResource menuButtonText}" />
                                </StackPanel>
                            </RadioButton>
                            <RadioButton x:Name="btnLogs" Style="{DynamicResource menuButton}" Tag="{DynamicResource AccentCyan}">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                    <Path Style="{DynamicResource menuButtonIcon}" Data="{DynamicResource Logs}" />
                                    <TextBlock Text="Logs" Style="{DynamicResource menuButtonText}" />
                                </StackPanel>
                            </RadioButton>
                        </StackPanel>
                    </Grid>
                </Border>
                <!-- Main Section -->
                <Border CornerRadius="0,10,10,0" Grid.Column="1">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0.75">
                            <GradientStop Color="{DynamicResource PrimaryBackgroundDarkColor}" Offset="0" />
                            <GradientStop Color="{DynamicResource PrimaryBackgroundColor}" Offset="1" />
                        </LinearGradientBrush>
                    </Border.Background>
                    <Grid>
                        <Grid.RowDefinitions>
                            <!-- Control Bar -->
                            <RowDefinition Height="30" />
                            <!-- Header/Caption -->
                            <RowDefinition Height="40" />
                            <!-- Content Section / Child Views -->
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <!-- Control Bar -->
                        <StackPanel x:Name="panelControlBar" Grid.Row="0" Orientation="Horizontal" FlowDirection="RightToLeft" Background="Transparent" Margin="0,0,5,0">
                            <Button x:Name="btnClose" Style="{DynamicResource controlButton}" Tag="{DynamicResource AccentPink}">
                                <Path Style="{DynamicResource controlButtonIcon}" Data="{DynamicResource xMark}" />
                            </Button>
                            <Button x:Name="btnMaximize" Style="{DynamicResource controlButton}" Tag="{DynamicResource AccentYellow}">
                                <Path Style="{DynamicResource controlButtonIcon}" Data="{DynamicResource Square}" />
                            </Button>
                            <Button x:Name="btnMinimize" Style="{DynamicResource controlButton}" Tag="{DynamicResource AccentBlueLight}">
                                <Path Style="{DynamicResource controlButtonIcon}" Width="13" Data="{DynamicResource Minimize}" />
                            </Button>
                        </StackPanel>
                        <!-- Header -->
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.Row="1">
                            <!-- Home Header -->
                            <StackPanel Orientation="Horizontal" x:Name="headerHome" Visibility="Collapsed">
                                <Path Data="{DynamicResource Home}" Height="24" Width="24" Stretch="Uniform" Fill="{DynamicResource TitleTextSecondary}" Margin="35,0,10,0" />
                                <TextBlock Text="Home" Foreground="{DynamicResource TitleTextSecondary}" FontSize="20" FontFamily="Montserrat" FontWeight="Medium" VerticalAlignment="Center" />
                            </StackPanel>
                            <!-- Config Header -->
                            <StackPanel Orientation="Horizontal" x:Name="headerConfig" Visibility="Collapsed">
                                <Path Data="{DynamicResource Config}" Height="24" Width="24" Stretch="Uniform" Fill="{DynamicResource TitleTextSecondary}" Margin="35,0,10,0" />
                                <TextBlock Text="Configuration" Foreground="{DynamicResource TitleTextSecondary}" FontSize="20" FontFamily="Montserrat" FontWeight="Medium" VerticalAlignment="Center" />
                            </StackPanel>
                            <!-- Logs Header -->
                            <StackPanel Orientation="Horizontal" x:Name="headerLogs" Visibility="Collapsed">
                                <Path Data="{DynamicResource Logs}" Height="24" Width="24" Stretch="Uniform" Fill="{DynamicResource TitleTextSecondary}" Margin="35,0,10,0" />
                                <TextBlock Text="Logs" Foreground="{DynamicResource TitleTextSecondary}" FontSize="20" FontFamily="Montserrat" FontWeight="Medium" VerticalAlignment="Center" />
                            </StackPanel>
                        </StackPanel>
                        <ContentControl x:Name="contentMain" Grid.Row="2" Margin="25">
                        </ContentControl>
                    </Grid>
                </Border>
            </Grid>
        </Border>
        <!-- Topmost transparent border for resizing only -->
        <Border x:Name="WindowResizeBorder"
                Background="Transparent"
                Visibility="Visible"
                IsHitTestVisible="False"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Panel.ZIndex="99"/>
    </Grid>
</Window>