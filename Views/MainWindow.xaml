<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:WPF_LoginForm.Views"
        xmlns:windowChrome="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        Title="MainWindowView"
        Height="700"
        Width="1300"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        ResizeMode="CanResize">
    <!-- Correctly nested WindowChrome -->
    <windowChrome:WindowChrome.WindowChrome>
        <windowChrome:WindowChrome
            CaptionHeight="1"
            CornerRadius="10"
            ResizeBorderThickness="8"
            GlassFrameThickness="0" />
    </windowChrome:WindowChrome.WindowChrome>
    <Border CornerRadius="10"
            BorderThickness="1"
            Background="Transparent">
        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0"
                                 EndPoint="1,1">
                <GradientStop Color="{DynamicResource winBorderColor1}"
                              Offset="0" />
                <GradientStop Color="{DynamicResource winBorderColor2}"
                              Offset="0" />
                <GradientStop Color="{DynamicResource winBorderColor3}"
                              Offset="0" />
            </LinearGradientBrush>
        </Border.BorderBrush>
        <Grid>
            <Grid.ColumnDefinitions>
                <!-- Sidebar -->
                <ColumnDefinition Width="250" />
                <!-- Main Section -->
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <!-- Sidebar -->
            <Border CornerRadius="10,0,0,10"
                    Grid.Column="0">
                <Border.Background>
                    <LinearGradientBrush StartPoint="1,0.75"
                                         EndPoint="0,0">
                        <GradientStop Color="{DynamicResource secondaryBackColor1}"
                                      Offset="0" />
                        <GradientStop Color="{DynamicResource secondaryBackColor2}"
                                      Offset="1" />
                    </LinearGradientBrush>
                </Border.Background>
                <Grid>
                    <StackPanel x:Name="SidebarPanel"
                                Background="Transparent"
                                HorizontalAlignment="Center">
                        <!-- Title -->
                        <StackPanel Orientation="Horizontal"
                                    Height="100"
                                    Margin="15,15,15,15"
                                    Background="Transparent">
                            <Viewbox Stretch="Uniform"
                                     MaxWidth="180"
                                     MaxHeight="120"
                                     VerticalAlignment="Center"
                                     HorizontalAlignment="Center">
                                <Image x:Name="Logo"
                                       Source="Images/logo yellow arrow.png" />
                            </Viewbox>
                        </StackPanel>
                        <!-- Menu Buttons -->
                        <RadioButton x:Name="btnHome" Style="{DynamicResource menuButton}"
                                     Tag="{DynamicResource color1}">
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Left">
                                <Path Style="{DynamicResource menuButtonIcon}"
                                      Data="{DynamicResource Home}" />
                                <TextBlock Text="Home"
                                           Style="{DynamicResource menuButtonText}" />
                            </StackPanel>
                        </RadioButton>
                        <RadioButton x:Name="btnConfig" Style="{DynamicResource menuButton}"
                                     Tag="{DynamicResource color2}">
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Left">
                                <Path Style="{DynamicResource menuButtonIcon}"
                                      Data="{DynamicResource Config}" />
                                <TextBlock Text="Config"
                                           Style="{DynamicResource menuButtonText}" />
                            </StackPanel>
                        </RadioButton>
                        <RadioButton x:Name="btnLogs" Style="{DynamicResource menuButton}"
                                     Tag="{DynamicResource color3}">
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Left">
                                <Path Style="{DynamicResource menuButtonIcon}"
                                      Data="{DynamicResource Logs}" />
                                <TextBlock Text="Logs"
                                           Style="{DynamicResource menuButtonText}" />
                            </StackPanel>
                        </RadioButton>
                    </StackPanel>
                </Grid>
            </Border>
            <!-- Main Section -->
            <Border CornerRadius="0,10,10,0"
                    Grid.Column="1">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0"
                                         EndPoint="1,0.75">
                        <GradientStop Color="{DynamicResource primaryBackColor1}"
                                      Offset="0" />
                        <GradientStop Color="{DynamicResource primaryBackColor2}"
                                      Offset="1" />
                    </LinearGradientBrush>
                </Border.Background>
                <Grid>
                    <Grid.RowDefinitions>
                        <!-- Control Bar -->
                        <RowDefinition Height="30" />
                        <!-- Header/Caption -->
                        <RowDefinition Height="40" />
                        <!-- Content Section / Child Views -->
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <!-- Control Bar -->
                    <StackPanel x:Name="panelControlBar"
                                Grid.Row="0"
                                Orientation="Horizontal"
                                FlowDirection="RightToLeft"
                                Background="Transparent"
                                Margin="0,0,5,0">
                        <Button x:Name="btnClose"
                                Style="{DynamicResource controlButton}"
                                Tag="{DynamicResource color4}">
                            <Path Style="{DynamicResource controlButtonIcon}"
                                  Data="{DynamicResource xMark}" />
                        </Button>
                        <Button x:Name="btnMaximize"
                                Style="{DynamicResource controlButton}"
                                Tag="{DynamicResource color6}">
                            <Path Style="{DynamicResource controlButtonIcon}"
                                  Data="{DynamicResource Square}" />
                        </Button>
                        <Button x:Name="btnMinimize"
                                Style="{DynamicResource controlButton}"
                                Tag="{DynamicResource color8}">
                            <Path Style="{DynamicResource controlButtonIcon}"
                                  Width="13"
                                  Data="{DynamicResource Minimize}" />
                        </Button>
                    </StackPanel>
                    <!-- Header -->
                    <StackPanel Orientation="Horizontal"
                                VerticalAlignment="Center"
                                Grid.Row="1">
                        <Path Data="{DynamicResource Home}"
                              Height="20"
                              Width="20"
                              Stretch="Uniform"
                              Fill="{DynamicResource titleColor2}"
                              Margin="35,0,10,0" />
                        <TextBlock Text="Dashboard"
                                   Foreground="{DynamicResource titleColor2}"
                                   FontSize="16"
                                   FontFamily="Montserrat"
                                   FontWeight="Medium"
                                   VerticalAlignment="Center" />
                    </StackPanel>
                    <ContentControl x:Name="contentMain"
                                    Grid.Row="2"
                                    Margin="25">
                    </ContentControl>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>