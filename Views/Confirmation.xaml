<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Confirm Apply Updates" Height="240" Width="400" WindowStartupLocation="CenterScreen" WindowStyle="None" AllowsTransparency="True" ResizeMode="NoResize" Background="{x:Null}">
    <Border CornerRadius="10" BorderThickness="1">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0.75">
                <GradientStop Color="{DynamicResource PrimaryBackgroundDarkColor}" Offset="0" />
                <GradientStop Color="{DynamicResource PrimaryBackgroundColor}" Offset="1" />
            </LinearGradientBrush>
        </Border.Background>
        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="{DynamicResource WindowBorderPrimaryColor}" Offset="0" />
                <GradientStop Color="{DynamicResource WindowBorderAccentColor}" Offset="0.5" />
                <GradientStop Color="{DynamicResource WindowBorderSecondaryColor}" Offset="1" />
            </LinearGradientBrush>
        </Border.BorderBrush>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="36" /> <!-- Control Bar -->
                <RowDefinition Height="Auto" /> <!-- Header -->
                <RowDefinition Height="Auto" /> <!-- Subheader -->
                <RowDefinition Height="*" />   <!-- Computer List -->
                <RowDefinition Height="Auto" /> <!-- Buttons -->
            </Grid.RowDefinitions>
            <!-- Control Bar -->
            <StackPanel x:Name="panelControlBar" Grid.Row="0" Orientation="Horizontal" FlowDirection="RightToLeft" Background="Transparent" Margin="0,0,5,0">
                <Button x:Name="btnClose" Style="{DynamicResource controlButton}" Tag="{DynamicResource AccentPink}">
                    <Path Style="{DynamicResource controlButtonIcon}" Data="{DynamicResource xMark}" />
                </Button>
                <Button x:Name="btnMinimize" Style="{DynamicResource controlButton}" Tag="{DynamicResource AccentBlueLight}">
                    <Path Style="{DynamicResource controlButtonIcon}" Width="13" Data="{DynamicResource Minimize}" />
                </Button>
            </StackPanel>
            <!-- Header -->
            <TextBlock x:Name="popupHeader" Grid.Row="1" Text="Confirm Apply Updates" Foreground="{DynamicResource TitleTextPrimary}" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,8,0,0" />
            <!-- Subheader -->
            <TextBlock x:Name="popupSubHeader" Grid.Row="2" Text="This action will apply updates to the computer(s):" Foreground="{DynamicResource TitleTextPrimary}" FontSize="16" FontWeight="Normal" HorizontalAlignment="Center" TextAlignment="Center" Margin="8,8,8,8" TextWrapping="Wrap" />
            <!-- Computer List -->
            <ListBox Grid.Row="3"
                     x:Name="popupComputerList"
                     FontSize="16"
                     Foreground="{DynamicResource TitleTextPrimary}"
                     BorderThickness="0"
                     Background="Transparent"
                     HorizontalContentAlignment="Center"
                     Padding="24,0"
                     MaxHeight="100"
                     Margin="0,0,0,2"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"/>
            <!-- Buttons -->
            <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
                <Button x:Name="btnContinue" Content="Continue" Width="120" Height="48" Margin="0,8,8,0" Style="{DynamicResource ModernButton}" />
                <Button x:Name="btnAbort" Content="Abort" Width="120" Height="48" Margin="8,8,0,0" Style="{DynamicResource ModernButton}" />
            </StackPanel>
        </Grid>
    </Border>
</Window>
