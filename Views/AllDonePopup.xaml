<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="All Processes Complete" Height="200" Width="400" WindowStartupLocation="CenterScreen" WindowStyle="None" AllowsTransparency="True" Background="Transparent" ResizeMode="NoResize">
    <Border CornerRadius="10" BorderThickness="1" Background="{DynamicResource PrimaryBackgroundColor}" BorderBrush="{DynamicResource WindowBorderPrimaryColor}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40" /> <!-- Control Bar -->
                <RowDefinition Height="*" />  <!-- Content -->
                <RowDefinition Height="60" /> <!-- Button -->
            </Grid.RowDefinitions>
            <!-- Control Bar -->
            <StackPanel x:Name="panelControlBar" Grid.Row="0" Orientation="Horizontal" FlowDirection="RightToLeft" Background="Transparent" Margin="0,0,5,0">
                <Button x:Name="btnClose" Style="{DynamicResource controlButton}" Tag="{DynamicResource AccentPink}">
                    <Path Style="{DynamicResource controlButtonIcon}" Data="{DynamicResource xMark}" />
                </Button>
            </StackPanel>
            <!-- Content -->
            <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="All terminal processes are complete!" FontSize="20" FontWeight="Bold" Foreground="{DynamicResource TitleTextSecondary}" HorizontalAlignment="Center" Margin="0,20,0,10" />
            </StackPanel>
            <!-- Custom Button -->
            <Button x:Name="btnOk" Grid.Row="2" Style="{DynamicResource ModernButton}" Content="OK" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10,0,10" Width="120" />
        </Grid>
    </Border>
</Window>
