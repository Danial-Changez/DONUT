<!-- Configure.xaml -->
<Grid xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{DynamicResource PanelBackground}">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="30,20,30,20">
            <!-- Flags -->
            <TextBlock Text="Flags" FontFamily="Montserrat" FontSize="16" FontWeight="Bold" Foreground="{DynamicResource AccentBlue}" Margin="0,0,0,8" />
            <StackPanel Orientation="Vertical" Margin="0,0,0,18">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8"><ToggleButton Style="{DynamicResource ModernToggleSwitch}" /><TextBlock Text="Silent: OFF" FontFamily="Montserrat" FontSize="14" Foreground="{DynamicResource BodyTextSecondary}" Margin="12,0,0,0" VerticalAlignment="Center" /></StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8"><ToggleButton Style="{DynamicResource ModernToggleSwitch}" /><TextBlock Text="Allow Xml: OFF" FontFamily="Montserrat" FontSize="14" Foreground="{DynamicResource BodyTextSecondary}" Margin="12,0,0,0" VerticalAlignment="Center" /></StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8"><ToggleButton Style="{DynamicResource ModernToggleSwitch}" /><TextBlock Text="Lock Settings: OFF" FontFamily="Montserrat" FontSize="14" Foreground="{DynamicResource BodyTextSecondary}" Margin="12,0,0,0" VerticalAlignment="Center" /></StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8"><ToggleButton Style="{DynamicResource ModernToggleSwitch}" /><TextBlock Text="Advanced Driver Restore: OFF" FontFamily="Montserrat" FontSize="14" Foreground="{DynamicResource BodyTextSecondary}" Margin="12,0,0,0" VerticalAlignment="Center" /></StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8"><ToggleButton Style="{DynamicResource ModernToggleSwitch}" /><TextBlock Text="User Consent: OFF" FontFamily="Montserrat" FontSize="14" Foreground="{DynamicResource BodyTextSecondary}" Margin="12,0,0,0" VerticalAlignment="Center" /></StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8"><ToggleButton Style="{DynamicResource ModernToggleSwitch}" /><TextBlock Text="Custom Proxy: OFF" FontFamily="Montserrat" FontSize="14" Foreground="{DynamicResource BodyTextSecondary}" Margin="12,0,0,0" VerticalAlignment="Center" /></StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8"><ToggleButton Style="{DynamicResource ModernToggleSwitch}" /><TextBlock Text="Proxy Authentication: OFF" FontFamily="Montserrat" FontSize="14" Foreground="{DynamicResource BodyTextSecondary}" Margin="12,0,0,0" VerticalAlignment="Center" /></StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8"><ToggleButton Style="{DynamicResource ModernToggleSwitch}" /><TextBlock Text="Proxy Fallback To Direct Connection: OFF" FontFamily="Montserrat" FontSize="14" Foreground="{DynamicResource BodyTextSecondary}" Margin="12,0,0,0" VerticalAlignment="Center" /></StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8"><ToggleButton Style="{DynamicResource ModernToggleSwitch}" /><TextBlock Text="Schedule Auto: OFF" FontFamily="Montserrat" FontSize="14" Foreground="{DynamicResource BodyTextSecondary}" Margin="12,0,0,0" VerticalAlignment="Center" /></StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8"><ToggleButton Style="{DynamicResource ModernToggleSwitch}" /><TextBlock Text="Schedule Manual: OFF" FontFamily="Montserrat" FontSize="14" Foreground="{DynamicResource BodyTextSecondary}" Margin="12,0,0,0" VerticalAlignment="Center" /></StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8"><ToggleButton Style="{DynamicResource ModernToggleSwitch}" /><TextBlock Text="Restore Defaults: OFF" FontFamily="Montserrat" FontSize="14" Foreground="{DynamicResource BodyTextSecondary}" Margin="12,0,0,0" VerticalAlignment="Center" /></StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8"><ToggleButton Style="{DynamicResource ModernToggleSwitch}" /><TextBlock Text="Force Restart: OFF" FontFamily="Montserrat" FontSize="14" Foreground="{DynamicResource BodyTextSecondary}" Margin="12,0,0,0" VerticalAlignment="Center" /></StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8"><ToggleButton Style="{DynamicResource ModernToggleSwitch}" /><TextBlock Text="Auto Suspend Bit Locker: OFF" FontFamily="Montserrat" FontSize="14" Foreground="{DynamicResource BodyTextSecondary}" Margin="12,0,0,0" VerticalAlignment="Center" /></StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8"><ToggleButton Style="{DynamicResource ModernToggleSwitch}" /><TextBlock Text="Default Source Location: OFF" FontFamily="Montserrat" FontSize="14" Foreground="{DynamicResource BodyTextSecondary}" Margin="12,0,0,0" VerticalAlignment="Center" /></StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8"><ToggleButton Style="{DynamicResource ModernToggleSwitch}" /><TextBlock Text="Installation Deferral: OFF" FontFamily="Montserrat" FontSize="14" Foreground="{DynamicResource BodyTextSecondary}" Margin="12,0,0,0" VerticalAlignment="Center" /></StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8"><ToggleButton Style="{DynamicResource ModernToggleSwitch}" /><TextBlock Text="System Restart Deferral: OFF" FontFamily="Montserrat" FontSize="14" Foreground="{DynamicResource BodyTextSecondary}" Margin="12,0,0,0" VerticalAlignment="Center" /></StackPanel>
                <StackPanel Orientation="Horizontal"><ToggleButton Style="{DynamicResource ModernToggleSwitch}" /><TextBlock Text="Updates Notification: OFF" FontFamily="Montserrat" FontSize="14" Foreground="{DynamicResource BodyTextSecondary}" Margin="12,0,0,0" VerticalAlignment="Center" /></StackPanel>
            </StackPanel>
            <!-- Dropdown / Multi-Select Options -->
            <TextBlock Text="Dropdown / Multi-Select Options" FontFamily="Montserrat" FontSize="16" FontWeight="Bold" Foreground="{DynamicResource AccentBlue}" Margin="0,0,0,8" />
            <StackPanel Margin="0,0,0,18">
                <TextBlock Text="Update Severity" Style="{DynamicResource ModernSectionSubtitle}" />
                <WrapPanel>
                    <CheckBox Content="Security" Style="{DynamicResource ModernCheckBox}" />
                    <CheckBox Content="Critical" Style="{DynamicResource ModernCheckBox}" />
                    <CheckBox Content="Recommended" Style="{DynamicResource ModernCheckBox}" />
                    <CheckBox Content="Optional" Style="{DynamicResource ModernCheckBox}" />
                </WrapPanel>
                <TextBlock Text="Update Type" Style="{DynamicResource ModernSectionSubtitle}" />
                <WrapPanel>
                    <CheckBox Content="Bios" Style="{DynamicResource ModernCheckBox}" />
                    <CheckBox Content="Firmware" Style="{DynamicResource ModernCheckBox}" />
                    <CheckBox Content="Driver" Style="{DynamicResource ModernCheckBox}" />
                    <CheckBox Content="Application" Style="{DynamicResource ModernCheckBox}" />
                    <CheckBox Content="Others" Style="{DynamicResource ModernCheckBox}" />
                </WrapPanel>
                <TextBlock Text="Update Device Category" Style="{DynamicResource ModernSectionSubtitle}" />
                <WrapPanel>
                    <CheckBox Content="Audio" Style="{DynamicResource ModernCheckBox}" />
                    <CheckBox Content="Video" Style="{DynamicResource ModernCheckBox}" />
                    <CheckBox Content="Network" Style="{DynamicResource ModernCheckBox}" />
                    <CheckBox Content="Storage" Style="{DynamicResource ModernCheckBox}" />
                    <CheckBox Content="Input" Style="{DynamicResource ModernCheckBox}" />
                    <CheckBox Content="Chipset" Style="{DynamicResource ModernCheckBox}" />
                    <CheckBox Content="Others" Style="{DynamicResource ModernCheckBox}" />
                </WrapPanel>
                <TextBlock Text="Schedule Action" FontFamily="Montserrat" FontSize="14" FontWeight="Bold" Foreground="{DynamicResource BodyTextSecondary}" Margin="0,8,0,0" />
                <ComboBox Width="200" Style="{DynamicResource ModernComboBox}">
                    <ComboBoxItem Content="NotifyAvailableUpdates" />
                    <ComboBoxItem Content="DownloadAndNotify" />
                    <ComboBoxItem Content="DownloadInstallAndNotify" />
                </ComboBox>
            </StackPanel>
            <!-- Text Options -->
            <TextBlock Text="Text Options" FontFamily="Montserrat" FontSize="16" FontWeight="Bold" Foreground="{DynamicResource AccentBlue}" Margin="0,0,0,8" />
            <StackPanel Margin="0,0,0,18">
                <TextBlock Text="Output Log" FontFamily="Montserrat" FontSize="14" Foreground="{DynamicResource BodyTextSecondary}" />
                <TextBox Width="320" Style="{DynamicResource ModernTextBox}" />
                <TextBlock Text="Catalog Location" FontFamily="Montserrat" FontSize="14" Foreground="{DynamicResource BodyTextSecondary}" />
                <TextBox Width="320" Style="{DynamicResource ModernTextBox}" />
                <TextBlock Text="Driver Library Location" FontFamily="Montserrat" FontSize="14" Foreground="{DynamicResource BodyTextSecondary}" />
                <TextBox Width="320" Style="{DynamicResource ModernTextBox}" />
                <TextBlock Text="Download Location" FontFamily="Montserrat" FontSize="14" Foreground="{DynamicResource BodyTextSecondary}" />
                <TextBox Width="320" Style="{DynamicResource ModernTextBox}" />
                <TextBlock Text="Import Settings" FontFamily="Montserrat" FontSize="14" Foreground="{DynamicResource BodyTextSecondary}" />
                <TextBox Width="320" Style="{DynamicResource ModernTextBox}" />
                <TextBlock Text="Export Settings" FontFamily="Montserrat" FontSize="14" Foreground="{DynamicResource BodyTextSecondary}" />
                <TextBox Width="320" Style="{DynamicResource ModernTextBox}" />
                <TextBlock Text="Bios Password" FontFamily="Montserrat" FontSize="14" Foreground="{DynamicResource BodyTextSecondary}" />
                <TextBox Width="320" Style="{DynamicResource ModernTextBox}" />
                <TextBlock Text="Secure Bios Password" FontFamily="Montserrat" FontSize="14" Foreground="{DynamicResource BodyTextSecondary}" />
                <TextBox Width="320" Style="{DynamicResource ModernTextBox}" />
                <TextBlock Text="Custom Proxy" FontFamily="Montserrat" FontSize="14" Foreground="{DynamicResource BodyTextSecondary}" />
                <TextBox Width="320" Style="{DynamicResource ModernTextBox}" />
                <TextBlock Text="Proxy Host" FontFamily="Montserrat" FontSize="14" Foreground="{DynamicResource BodyTextSecondary}" />
                <TextBox Width="320" Style="{DynamicResource ModernTextBox}" />
                <TextBlock Text="Proxy Port" FontFamily="Montserrat" FontSize="14" Foreground="{DynamicResource BodyTextSecondary}" />
                <TextBox Width="120" Style="{DynamicResource ModernTextBox}" />
                <TextBlock Text="Proxy User Name" FontFamily="Montserrat" FontSize="14" Foreground="{DynamicResource BodyTextSecondary}" />
                <TextBox Width="320" Style="{DynamicResource ModernTextBox}" />
                <TextBlock Text="Proxy Password" FontFamily="Montserrat" FontSize="14" Foreground="{DynamicResource BodyTextSecondary}" />
                <TextBox Width="320" Style="{DynamicResource ModernTextBox}" />
                <TextBlock Text="Secure Proxy Password" FontFamily="Montserrat" FontSize="14" Foreground="{DynamicResource BodyTextSecondary}" />
                <TextBox Width="320" Style="{DynamicResource ModernTextBox}" />
                <TextBlock Text="Schedule Weekly" FontFamily="Montserrat" FontSize="14" Foreground="{DynamicResource BodyTextSecondary}" />
                <TextBox Width="320" Style="{DynamicResource ModernTextBox}" />
                <TextBlock Text="Schedule Monthly" FontFamily="Montserrat" FontSize="14" Foreground="{DynamicResource BodyTextSecondary}" />
                <TextBox Width="320" Style="{DynamicResource ModernTextBox}" />
                <TextBlock Text="Schedule Daily" FontFamily="Montserrat" FontSize="14" Foreground="{DynamicResource BodyTextSecondary}" />
                <TextBox Width="320" Style="{DynamicResource ModernTextBox}" />
                <TextBlock Text="Deferral Install Interval" FontFamily="Montserrat" FontSize="14" Foreground="{DynamicResource BodyTextSecondary}" />
                <TextBox Width="120" Style="{DynamicResource ModernTextBox}" />
                <TextBlock Text="Deferral Install Count" FontFamily="Montserrat" FontSize="14" Foreground="{DynamicResource BodyTextSecondary}" />
                <TextBox Width="120" Style="{DynamicResource ModernTextBox}" />
                <TextBlock Text="Deferral Restart Interval" FontFamily="Montserrat" FontSize="14" Foreground="{DynamicResource BodyTextSecondary}" />
                <TextBox Width="120" Style="{DynamicResource ModernTextBox}" />
                <TextBlock Text="Deferral Restart Count" FontFamily="Montserrat" FontSize="14" Foreground="{DynamicResource BodyTextSecondary}" />
                <TextBox Width="120" Style="{DynamicResource ModernTextBox}" />
                <TextBlock Text="Max Retry" FontFamily="Montserrat" FontSize="14" Foreground="{DynamicResource BodyTextSecondary}" />
                <TextBox Width="120" Style="{DynamicResource ModernTextBox}" />
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Grid>
