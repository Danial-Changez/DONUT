<!-- GenerateEncryptedPassword.xaml - Organized layout to match Python UI screenshots -->
<Grid xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{DynamicResource PanelBackground}">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="30,20,30,20">
            <!-- Text Options -->
            <TextBlock Text="Text Options"
                       FontFamily="Montserrat"
                       FontSize="16"
                       FontWeight="Bold"
                       Foreground="{DynamicResource TitleTextPrimary}"
                       Margin="0,0,0,8" />
            <StackPanel Margin="0,0,0,18">
                <TextBlock Text="Encryption Key"
                           FontFamily="Montserrat"
                           FontSize="14"
                           FontWeight="Bold"
                           Foreground="{DynamicResource BodyTextPrimary}"
                           Margin="0,10,0,6" />
                <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Center"
                            Margin="0,0,0,8">
                    <Path Data="{DynamicResource EncryptionKey}"
                          Fill="{DynamicResource AccentYellow}"
                          Width="16"
                          Height="16"
                          Stretch="Uniform"
                          Margin="0,8,8,0" />
                    <TextBox x:Name="encryptionKey"
                             Width="320"
                             Style="{DynamicResource ModernTextBox}" />
                </StackPanel>
                <TextBlock Text="Password"
                           FontFamily="Montserrat"
                           FontSize="14"
                           FontWeight="Bold"
                           Foreground="{DynamicResource BodyTextPrimary}"
                           Margin="0,10,0,6" />
                <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Center"
                            Margin="0,0,0,8">
                    <Path Data="{DynamicResource EncryptedPassword}"
                          Fill="{DynamicResource AccentYellow}"
                          Width="16"
                          Height="16"
                          Stretch="Uniform"
                          Margin="0,8,8,0" />
                    <TextBox x:Name="password"
                             Width="320"
                             Style="{DynamicResource ModernTextBox}" />
                </StackPanel>
                <TextBlock Text="Output Path"
                           FontFamily="Montserrat"
                           FontSize="14"
                           FontWeight="Bold"
                           Foreground="{DynamicResource BodyTextPrimary}"
                           Margin="0,10,0,6" />
                <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Center"
                            Margin="0,0,0,8">
                    <Path Data="{DynamicResource File}"
                          Fill="{DynamicResource AccentYellow}"
                          Width="16"
                          Height="16"
                          Stretch="Uniform"
                          Margin="0,8,8,0" />
                    <TextBox x:Name="outputPath"
                             Width="320"
                             Style="{DynamicResource ModernTextBox}" />
                </StackPanel>
                <TextBlock Text="Secure Encryption Key"
                           FontFamily="Montserrat"
                           FontSize="14"
                           FontWeight="Bold"
                           Foreground="{DynamicResource BodyTextPrimary}"
                           Margin="0,10,0,6" />
                <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Center"
                            Margin="0,0,0,8">
                    <Path Data="{DynamicResource EncryptionKey}"
                          Fill="{DynamicResource AccentYellow}"
                          Width="16"
                          Height="16"
                          Stretch="Uniform"
                          Margin="0,8,8,0" />
                    <TextBox x:Name="secureEncryptionKey"
                             Width="320"
                             Style="{DynamicResource ModernTextBox}" />
                </StackPanel>
                <TextBlock Text="Secure Password"
                           FontFamily="Montserrat"
                           FontSize="14"
                           FontWeight="Bold"
                           Foreground="{DynamicResource BodyTextPrimary}"
                           Margin="0,10,0,6" />
                <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Center"
                            Margin="0,0,0,8">
                    <Path Data="{DynamicResource EncryptedPasswordFile}"
                          Fill="{DynamicResource AccentYellow}"
                          Width="16"
                          Height="16"
                          Stretch="Uniform"
                          Margin="0,8,8,0" />
                    <TextBox x:Name="securePassword"
                             Width="320"
                             Style="{DynamicResource ModernTextBox}" />
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Grid>