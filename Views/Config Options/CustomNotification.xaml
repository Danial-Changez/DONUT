<!-- CustomNotification.xaml - Organized layout to match Python UI screenshots -->
<Grid xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{DynamicResource PanelBackground}">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="30,20,30,20">
            <!-- Text Options -->
            <TextBlock Text="Text Options" FontFamily="Montserrat" FontSize="16" FontWeight="Bold" Foreground="{DynamicResource AccentBlue}" Margin="0,0,0,8" />
            <StackPanel Margin="0,0,0,18">
                <TextBlock Text="Heading" Style="{DynamicResource ModernSectionSubtitle}" />
                <TextBox Width="320" Style="{DynamicResource ModernTextBox}" />
                <TextBlock Text="Body" Style="{DynamicResource ModernSectionSubtitle}" />
                <TextBox Width="320" Style="{DynamicResource ModernTextBox}" />
                <TextBlock Text="Timestamp" Style="{DynamicResource ModernSectionSubtitle}" />
                <TextBox Width="320" Style="{DynamicResource ModernTextBox}" />
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Grid>
