<!-- Help.xaml -->
<Grid xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{DynamicResource PanelBackground}">
    <StackPanel Margin="30,20,30,20">
        <TextBlock Text="This command will display the help information for DCU CLI on the target machine(s)."
                   FontFamily="Montserrat" FontSize="14" Foreground="{DynamicResource BodyTextSecondary}"
                   Margin="0,0,0,18" TextWrapping="Wrap" HorizontalAlignment="Center" />
        <!-- No options for help command -->
        <Button Content="Save Config" Style="{DynamicResource ModernButton}" HorizontalAlignment="Center" Margin="0,10,0,0" />
    </StackPanel>
</Grid>
