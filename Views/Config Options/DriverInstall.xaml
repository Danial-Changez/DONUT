<!-- DriverInstall.xaml - Organized layout to match Python UI screenshots -->
<Grid xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Background="{DynamicResource PanelBackground}">
    <Grid.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Grid.Resources>
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="30,20,30,20">
            <!-- Flags -->
            <TextBlock Text="Flags" FontFamily="Montserrat" FontSize="16" FontWeight="Bold" Foreground="{DynamicResource TitleTextPrimary}" Margin="0,0,0,8" />
            <StackPanel Orientation="Vertical" Margin="0,0,0,18">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <ToggleButton x:Name="silent" Style="{DynamicResource ModernToggleSwitch}" />
                    <TextBlock Text="Silent" FontFamily="Montserrat" FontSize="14" Foreground="{DynamicResource BodyTextSecondary}" Margin="12,0,0,0" VerticalAlignment="Center" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <ToggleButton x:Name="reboot" Style="{DynamicResource ModernToggleSwitch}" />
                        <Path x:Name="rebootWarningIcon"
                          Data="{DynamicResource Warning}"
                          Fill="Yellow"
                          Width="20" Height="20" Margin="8,0,-4,0"
                          VerticalAlignment="Center"
                          Stretch="Uniform"
                          Visibility="{Binding IsChecked, ElementName=reboot, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    <TextBlock Text="Reboot" FontFamily="Montserrat" FontSize="14" Foreground="{DynamicResource BodyTextSecondary}" Margin="12,0,0,0" VerticalAlignment="Center" />
                    <TextBlock x:Name="rebootWarningText"
                               Text="(WARNING: This will cause the target machine(s) to automatically restart)"
                               Foreground="Yellow"
                               FontWeight="Bold"
                               FontSize="14"
                               FontFamily="Montserrat"
                               Margin="8,0,0,0"
                               VerticalAlignment="Center"
                               Visibility="{Binding IsChecked, ElementName=reboot, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                </StackPanel>
            </StackPanel>
            <!-- Text Options -->
            <TextBlock Text="Text Options" FontFamily="Montserrat" FontSize="16" FontWeight="Bold" Foreground="{DynamicResource TitleTextPrimary}" Margin="0,0,0,8" />
            <StackPanel Margin="0,0,0,18">
                <TextBlock Text="Output Log" FontFamily="Montserrat" FontSize="14" FontWeight="Bold" Foreground="{DynamicResource BodyTextPrimary}" Margin="0,10,0,6" />
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,8">
                    <Path Data="{DynamicResource File}" Fill="{DynamicResource AccentYellow}" Width="16" Height="16" Stretch="Uniform" Margin="0,8,8,0" />
                    <TextBox x:Name="outputLog" Width="304" Style="{DynamicResource ModernTextBox}" Margin="0,8,0,0" />
                </StackPanel>
                <TextBlock Text="Driver Library Location" FontFamily="Montserrat" FontSize="14" FontWeight="Bold" Foreground="{DynamicResource BodyTextPrimary}" Margin="0,10,0,6" />
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,8">
                    <Path Data="{DynamicResource DriverLibrary}" Fill="{DynamicResource AccentYellow}" Width="16" Height="16" Stretch="Uniform" Margin="0,8,8,0" />
                    <TextBox x:Name="driverLibraryLocation" Width="304" Style="{DynamicResource ModernTextBox}" Margin="0,8,0,0" />
                </StackPanel>
                <TextBlock Text="Catalog Location" FontFamily="Montserrat" FontSize="14" FontWeight="Bold" Foreground="{DynamicResource BodyTextPrimary}" Margin="0,10,0,6" />
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,8">
                    <Path Data="{DynamicResource Catalog}" Fill="{DynamicResource AccentYellow}" Width="16" Height="16" Stretch="Uniform" Margin="0,8,8,0" />
                    <TextBox x:Name="catalogLocation" Width="304" Style="{DynamicResource ModernTextBox}" Margin="0,8,0,0" />
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Grid>