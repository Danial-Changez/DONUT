<!-- DriverInstall.xaml - Organized layout to match Python UI screenshots -->
<Grid xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Background="{DynamicResource PanelBackground}">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="30,20,30,20">
            <!-- Flags -->
            <TextBlock Text="Flags" FontFamily="Montserrat" FontSize="16" FontWeight="Bold" Foreground="{DynamicResource AccentBlue}" Margin="0,0,0,8" />
            <StackPanel Orientation="Vertical" Margin="0,0,0,18">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <ToggleButton x:Name="silent" Style="{DynamicResource ModernToggleSwitch}" />
                    <TextBlock Text="Silent" FontFamily="Montserrat" FontSize="14" Foreground="{DynamicResource BodyTextSecondary}" Margin="12,0,0,0" VerticalAlignment="Center" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <ToggleButton x:Name="reboot" Style="{DynamicResource ModernToggleSwitch}" />
                    <TextBlock Text="Reboot" FontFamily="Montserrat" FontSize="14" Foreground="{DynamicResource BodyTextSecondary}" Margin="12,0,0,0" VerticalAlignment="Center" />
                </StackPanel>
            </StackPanel>
            <!-- Text Options -->
            <TextBlock Text="Text Options" FontFamily="Montserrat" FontSize="16" FontWeight="Bold" Foreground="{DynamicResource AccentBlue}" Margin="0,0,0,8" />
            <StackPanel Margin="0,0,0,18">
                <TextBlock Text="Output Log" Style="{DynamicResource ModernSectionSubtitle}" />
                <TextBox x:Name="outputLog" Width="320" Style="{DynamicResource ModernTextBox}" />
                <TextBlock Text="Driver Library Location" Style="{DynamicResource ModernSectionSubtitle}" />
                <TextBox x:Name="driverLibraryLocation" Width="320" Style="{DynamicResource ModernTextBox}" />
                <TextBlock Text="Catalog Location" Style="{DynamicResource ModernSectionSubtitle}" />
                <TextBox x:Name="catalogLocation" Width="320" Style="{DynamicResource ModernTextBox}" />
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Grid>