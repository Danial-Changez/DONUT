<!-- ConfigView.xaml -->
<Grid xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:WPF_LoginForm.Views"
      Background="{DynamicResource PanelBackground}">
    <!-- Removed local Grid.Resources, all styles now come from Styles/ModernControls.xaml -->
    <Grid.RowDefinitions>
        <RowDefinition Height="Auto" /> <!-- Title -->
        <RowDefinition Height="Auto" /> <!-- Command Dropdown -->
        <RowDefinition Height="*" />   <!-- Options (child view) -->
        <RowDefinition Height="Auto" /> <!-- Save Button -->
    </Grid.RowDefinitions>
    <!-- Title -->
    <TextBlock Text="Configuration"
               Grid.Row="0"
               FontFamily="Montserrat"
               FontSize="24"
               FontWeight="Bold"
               Foreground="{DynamicResource AccentBlue}"
               Margin="0,18,0,24"
               HorizontalAlignment="Center" />
    <!-- Main Command Dropdown -->
    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,16">
        <TextBlock Text="Main Command: "
                   FontFamily="Montserrat"
                   FontSize="16"
                   FontWeight="Medium"
                   Foreground="{DynamicResource BodyTextPrimary}"
                   VerticalAlignment="Center" />
        <ComboBox x:Name="MainCommandComboBox"
                  Width="220"
                  Margin="10,0,0,0"
                  Style="{DynamicResource ModernComboBox}">
            <ComboBoxItem Content="Scan" />
            <ComboBoxItem Content="Apply Updates" />
            <ComboBoxItem Content="Configure" />
            <ComboBoxItem Content="Custom Notification" />
            <ComboBoxItem Content="Driver Install" />
            <ComboBoxItem Content="Generate Encrypted Password" />
            <ComboBoxItem Content="Help" />
            <ComboBoxItem Content="Version" />
        </ComboBox>
    </StackPanel>
    <!-- Dynamic Options Section (child view) -->
    <ContentControl x:Name="ConfigOptionContent" Grid.Row="2" Margin="0,0,0,0" />
    <!-- Save Button -->
    <Button Grid.Row="3"
            Content="Save Config"
            Style="{DynamicResource ModernButton}"
            HorizontalAlignment="Center"
            Margin="0,0,0,20" />
</Grid>