<!-- Scan.xaml - Organized layout to match Python UI screenshots -->
<Grid xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Background="{DynamicResource PanelBackground}">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="30,20,30,20" Background="{DynamicResource SecondaryBackground}">
            <!-- Flags -->
            <TextBlock Text="Flags" FontFamily="Montserrat" FontSize="16" FontWeight="Bold" Foreground="{DynamicResource TitleTextPrimary}" Margin="0,0,0,8" />
            <StackPanel Orientation="Vertical" Margin="0,0,0,18">
                <StackPanel Orientation="Horizontal">
                    <ToggleButton x:Name="silent" Style="{DynamicResource ModernToggleSwitch}" />
                    <TextBlock Text="Silent" FontFamily="Montserrat" FontSize="14" Foreground="{DynamicResource BodyTextPrimary}" Margin="12,0,0,0" VerticalAlignment="Center" />
                </StackPanel>
            </StackPanel>
            <!-- Dropdown / Multi-Select Options -->
            <TextBlock Text="Dropdown / Multi-Select Options" FontFamily="Montserrat" FontSize="16" FontWeight="Bold" Foreground="{DynamicResource TitleTextPrimary}" Margin="0,0,0,8" />
            <StackPanel Margin="0,0,0,18">
                <Grid Margin="0,0,0,8" x:Name="updateSeverity">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120" />
                        <ColumnDefinition Width="120" />
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition Width="140" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <!-- Severity Text -->
                        <RowDefinition Height="Auto" />
                        <!-- Severity -->
                    </Grid.RowDefinitions>
                    <TextBlock Text="Update Severity" FontFamily="Montserrat" FontSize="14" FontWeight="Bold" Foreground="{DynamicResource BodyTextPrimary}" Margin="0,0,0,6" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" />
                    <!-- Update Severity Row -->
                    <CheckBox Content="Security" Style="{DynamicResource ModernCheckBox}" Foreground="{DynamicResource BodyTextPrimary}" Grid.Row="1" Grid.Column="0" />
                    <CheckBox Content="Critical" Style="{DynamicResource ModernCheckBox}" Foreground="{DynamicResource BodyTextPrimary}" Grid.Row="1" Grid.Column="1" />
                    <CheckBox Content="Recommended" Style="{DynamicResource ModernCheckBox}" Foreground="{DynamicResource BodyTextPrimary}" Grid.Row="1" Grid.Column="2" />
                    <CheckBox Content="Optional" Style="{DynamicResource ModernCheckBox}" Foreground="{DynamicResource BodyTextPrimary}" Grid.Row="1" Grid.Column="3" />
                </Grid>
                <Grid Margin="0,0,0,8" x:Name="updateType">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120" />
                        <ColumnDefinition Width="120" />
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition Width="140" />
                        <ColumnDefinition Width="120" />
                        <ColumnDefinition Width="120" />
                        <ColumnDefinition Width="120" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <!-- Type Text -->
                        <RowDefinition Height="Auto" />
                        <!-- Type -->
                    </Grid.RowDefinitions>
                    <TextBlock Text="Update Type" FontFamily="Montserrat" FontSize="14" FontWeight="Bold" Foreground="{DynamicResource BodyTextPrimary}" Margin="0,10,0,6" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" />
                    <!-- Update Type Row -->
                    <CheckBox Content="Bios" Style="{DynamicResource ModernCheckBox}" Foreground="{DynamicResource BodyTextPrimary}" Grid.Row="1" Grid.Column="0" />
                    <CheckBox Content="Firmware" Style="{DynamicResource ModernCheckBox}" Foreground="{DynamicResource BodyTextPrimary}" Grid.Row="1" Grid.Column="1" />
                    <CheckBox Content="Driver" Style="{DynamicResource ModernCheckBox}" Foreground="{DynamicResource BodyTextPrimary}" Grid.Row="1" Grid.Column="2" />
                    <CheckBox Content="Application" Style="{DynamicResource ModernCheckBox}" Foreground="{DynamicResource BodyTextPrimary}" Grid.Row="1" Grid.Column="3" />
                    <CheckBox Content="Others" Style="{DynamicResource ModernCheckBox}" Foreground="{DynamicResource BodyTextPrimary}" Grid.Row="1" Grid.Column="4" />
                </Grid>
                <Grid Margin="0,0,0,8" x:Name="updateDeviceCategory">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120" />
                        <ColumnDefinition Width="120" />
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition Width="140" />
                        <ColumnDefinition Width="120" />
                        <ColumnDefinition Width="120" />
                        <ColumnDefinition Width="120" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <!-- Device Category Text -->
                        <RowDefinition Height="Auto" />
                        <!-- Device Category -->
                    </Grid.RowDefinitions>
                    <TextBlock Text="Update Device Category" FontFamily="Montserrat" FontSize="14" FontWeight="Bold" Foreground="{DynamicResource BodyTextPrimary}" Margin="0,10,0,6" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" />
                    <!-- Update Device Category Row -->
                    <CheckBox Content="Audio" Style="{DynamicResource ModernCheckBox}" Foreground="{DynamicResource BodyTextPrimary}" Grid.Row="1" Grid.Column="0" />
                    <CheckBox Content="Video" Style="{DynamicResource ModernCheckBox}" Foreground="{DynamicResource BodyTextPrimary}" Grid.Row="1" Grid.Column="1" />
                    <CheckBox Content="Network" Style="{DynamicResource ModernCheckBox}" Foreground="{DynamicResource BodyTextPrimary}" Grid.Row="1" Grid.Column="2" />
                    <CheckBox Content="Storage" Style="{DynamicResource ModernCheckBox}" Foreground="{DynamicResource BodyTextPrimary}" Grid.Row="1" Grid.Column="3" />
                    <CheckBox Content="Input" Style="{DynamicResource ModernCheckBox}" Foreground="{DynamicResource BodyTextPrimary}" Grid.Row="1" Grid.Column="4" />
                    <CheckBox Content="Chipset" Style="{DynamicResource ModernCheckBox}" Foreground="{DynamicResource BodyTextPrimary}" Grid.Row="1" Grid.Column="5" />
                    <CheckBox Content="Others" Style="{DynamicResource ModernCheckBox}" Foreground="{DynamicResource BodyTextPrimary}" Grid.Row="1" Grid.Column="6" />
                </Grid>
            </StackPanel>
            <!-- Text Options -->
            <TextBlock Text="Text Options" FontFamily="Montserrat" FontSize="16" FontWeight="Bold" Foreground="{DynamicResource TitleTextPrimary}" Margin="0,0,0,8" />
            <StackPanel Margin="0,0,0,18">
                <TextBlock Text="Output Log" FontFamily="Montserrat" FontSize="14" FontWeight="Bold" Foreground="{DynamicResource BodyTextPrimary}" />
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,8">
                    <Path Data="{DynamicResource File}" Fill="{DynamicResource AccentYellow}" Width="16" Height="16" Stretch="Uniform" Margin="0,8,8,0" />
                    <TextBox x:Name="outputLog" Width="304" Style="{DynamicResource ModernTextBox}" Foreground="{DynamicResource BodyTextPrimary}" Margin="0,8,0,0" />
                </StackPanel>
                <TextBlock Text="Catalog Location" FontFamily="Montserrat" FontSize="14" FontWeight="Bold" Foreground="{DynamicResource BodyTextPrimary}" Margin="0,8,0,0" />
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,8">
                    <Path Data="{DynamicResource Catalog}" Fill="{DynamicResource AccentYellow}" Width="16" Height="16" Stretch="Uniform" Margin="0,8,8,0" />
                    <TextBox x:Name="catalogLocation" Width="304" Style="{DynamicResource ModernTextBox}" Foreground="{DynamicResource BodyTextPrimary}" Margin="0,8,0,0" />
                </StackPanel>
                <TextBlock Text="Report" FontFamily="Montserrat" FontSize="14" FontWeight="Bold" Foreground="{DynamicResource BodyTextPrimary}" />
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,8">
                    <Path Data="{DynamicResource Report}" Fill="{DynamicResource AccentYellow}" Width="16" Height="16" Stretch="Uniform" Margin="0,8,8,0" />
                    <TextBox x:Name="report" Width="304" Style="{DynamicResource ModernTextBox}" Foreground="{DynamicResource BodyTextPrimary}" Margin="0,8,0,0" />
                </StackPanel>
            </StackPanel>
            <!-- Throttle Limit always at the very bottom -->
            <StackPanel Margin="0,20,0,0">
                <TextBlock Text="Throttle Limit" FontFamily="Montserrat" FontSize="16" FontWeight="Bold" Foreground="{DynamicResource TitleTextPrimary}" Margin="0,0,0,8" />
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,6,0,0">
                    <Path Data="{DynamicResource Rocket}" Fill="#E92424" Width="16" Height="16" Stretch="Uniform" Margin="0,0,8,0" />
                    <TextBox x:Name="throttleLimit" Width="120" Style="{DynamicResource ModernTextBox}" />
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Grid>