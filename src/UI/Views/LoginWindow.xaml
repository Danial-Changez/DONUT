<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        Title="Login"
        Height="700"
        Width="1300"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        ResizeMode="CanResize">
    <!-- Main window border and content -->
    <Border CornerRadius="12">
        <Border.Background>
            <ImageBrush x:Name="Background"
                        Stretch="UniformToFill" />
        </Border.Background>
        <Border CornerRadius="10"
                BorderThickness="2">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0"
                                     EndPoint="1,1">
                    <GradientStop Color="{DynamicResource LoginWindowBorderPrimaryColor}"
                                  Offset="0" />
                    <GradientStop Color="{DynamicResource LoginWindowBorderAccentColor}"
                                  Offset="0.75" />
                    <GradientStop Color="{DynamicResource LoginWindowBorderSecondaryColor}"
                                  Offset="1" />
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Border.Background>
                <LinearGradientBrush StartPoint="0,1"
                                     EndPoint="1,0"
                                     Opacity="0.75">
                    <GradientStop Color="{DynamicResource LoginBackgroundDarkColor}"
                                  Offset="0" />
                    <GradientStop Color="{DynamicResource LoginBackgroundColor}"
                                  Offset="1" />
                </LinearGradientBrush>
            </Border.Background>
            <Grid x:Name="RootGrid">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <!-- Control Bar -->
                <DockPanel x:Name="panelControlBar"
                           Grid.Row="0"
                           Background="Transparent"
                           Margin="0,0,5,0"
                           LastChildFill="True">
                    <!-- Right-side window controls -->
                    <StackPanel Orientation="Horizontal"
                                DockPanel.Dock="Right"
                                FlowDirection="RightToLeft">
                        <Button x:Name="btnClose"
                                Style="{DynamicResource controlButton}"
                                Tag="{DynamicResource AccentPink}"
                                Cursor="Hand">
                            <Path Style="{DynamicResource controlButtonIcon}"
                                  Data="{DynamicResource xMark}" />
                        </Button>
                        <Button x:Name="btnMinimize"
                                Style="{DynamicResource controlButton}"
                                Tag="{DynamicResource AccentBlueLight}"
                                Cursor="Hand">
                            <Path Style="{DynamicResource controlButtonIcon}"
                                  Width="13"
                                  Data="{DynamicResource Minimize}" />
                        </Button>
                    </StackPanel>
                    <!-- Left-side title -->
                    <TextBlock Text="Login"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               Margin="14,8,0,0"
                               Foreground="{DynamicResource TitleTextPrimary}"
                               FontFamily="Montserrat"
                               FontSize="12" />
                </DockPanel>
                <!-- OAuth Section -->
                <Grid Grid.Row="1"
                      Margin="16,12,16,16">
                    <!-- Used TranslateTransform on this to nudge position without affecting the panel -->
                    <StackPanel x:Name="githubHost"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                        <StackPanel.RenderTransform>
                            <TranslateTransform X="15"
                                                Y="-45" />
                        </StackPanel.RenderTransform>
                        <TextBlock Text="Login"
                                   HorizontalAlignment="Center"
                                   Foreground="{DynamicResource TitleTextPrimary}"
                                   FontFamily="Montserrat"
                                   FontWeight="Bold"
                                   FontSize="40"
                                   Margin="0,0,0,8" />
                        <Button x:Name="btnGitHubAuth"
                                Cursor="Hand"
                                ToolTip="Sign in with GitHub"
                                Style="{DynamicResource circleImageButton}"
                                Width="165"
                                Height="165"
                                Opacity="0.75" />
                    </StackPanel>
                    <!-- Bottom-anchored stack to keep link above the output panel -->
                    <StackPanel x:Name="BottomStatus"
                                VerticalAlignment="Bottom"
                                HorizontalAlignment="Center"
                                Width="520">
                        <!-- Access help line with hyperlink -->
                        <Border CornerRadius="8,8,0,0"
                                BorderThickness="1,1,1,0"
                                BorderBrush="{DynamicResource PanelBackgroundActive}"
                                Background="{DynamicResource LoginBackground}"
                                Width="420"
                                Height="30"
                                Padding="0"
                                Opacity="0.65">
                            <TextBlock x:Name="AccessHelp"
                                       TextAlignment="Center"
                                       Margin="8,6,8,6"
                                       Foreground="{DynamicResource TitleTextPrimary}">
                                <Run Text="GitHub access is required to use this app. " />
                                <Hyperlink x:Name="AccessLink"
                                           NavigateUri="https://github.com/">                                    
                                    Sign Up Here
                                </Hyperlink>
                            </TextBlock>
                        </Border>
                        <!-- Output panel anchored bottom-center -->
                        <Border CornerRadius="0,0,8,8"
                                BorderThickness="1,0,1,1"
                                BorderBrush="{DynamicResource PanelBackgroundActive}"
                                Background="{DynamicResource LoginBackground}"
                                Width="520"
                                Height="160"
                                Padding="0"
                                Opacity="0.65">
                            <TextBox x:Name="Output"
                                     TextWrapping="Wrap"
                                     TextAlignment="Center"
                                     AcceptsReturn="True"
                                     IsReadOnly="True"
                                     FontFamily="Consolas"
                                     FontSize="13.5"
                                     Background="Transparent"
                                     BorderBrush="Transparent"
                                     BorderThickness="1"
                                     Padding="6"
                                     Foreground="{DynamicResource TitleTextPrimary}" />
                        </Border>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
    </Border>
</Window>